<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.librarymanager.controllers.ManageReturnRequestsController">
  <center>
    <StackPane>
      <children>
        <SplitPane orientation="HORIZONTAL">
          <items>
            <AnchorPane>
              <children>
                <TableView fx:id="loansTable" prefWidth="600.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                  <columns>
                    <TableColumn fx:id="_idColumn" text="ID" prefWidth="120" />
                    <TableColumn fx:id="userEmailColumn" text="User Email" prefWidth="150" />
                    <TableColumn fx:id="userNameColumn" text="User Name" prefWidth="150" />
                    <TableColumn fx:id="bookTitleColumn" text="Book" prefWidth="200" />
                    <TableColumn fx:id="borrowConditionColumn" text="Borrow Condition" prefWidth="140" />
                    <TableColumn fx:id="borrowConditionNotesColumn" text="Borrow Notes" prefWidth="220" />
                    <TableColumn fx:id="returnConditionNotesColumn" text="Return Notes" prefWidth="220" />
                    <TableColumn fx:id="borrowDateColumn" text="Borrowed" prefWidth="120" />
                    <TableColumn fx:id="dueDateColumn" text="Due" prefWidth="120" />
                  </columns>
                </TableView>
                <Button fx:id="refreshBtn" text="Refresh" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" />
              </children>
            </AnchorPane>
          </items>
        </SplitPane>

        <!-- Optional loading overlay used by ControllerWithLoader -->
        <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="8" visible="false" managed="false" style="-fx-background-color: rgba(0,0,0,0.35); -fx-padding: 20;">
          <children>
            <ProgressIndicator fx:id="loadingSpinner" />
            <Text fx:id="loadingText" style="-fx-fill: white; -fx-font-size: 14px;" />
          </children>
        </VBox>
      </children>
    </StackPane>
  </center>
</BorderPane>