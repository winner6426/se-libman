<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="10"
  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.CardModalController">
  <StackPane prefWidth="400.0">
    <VBox prefHeight="400.0" prefWidth="100.0" spacing="10.0">
      <children>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="User ID"/>
          <TextField fx:id="userIdField" promptText="User ID" style="-fx-prompt-text-fill: #aaaaaa;"
            styleClass="input" disable="true"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Card ID"/>
          <TextField fx:id="cardIdField" promptText="Card ID" style="-fx-prompt-text-fill: #aaaaaa;"
            styleClass="input" disable="true"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="User Name"/>
          <TextField fx:id="userNameField" promptText="User Name"
            style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input" disable="true"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Register Date"/>
          <DatePicker fx:id="registerDateField" promptText="Register Date"
            style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Expire Date"/>
          <DatePicker fx:id="expireDateField" promptText="Expire Date"
            style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Status"/>
          <ComboBox fx:id="statusField" styleClass="input">
            <padding>
              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
          </ComboBox>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
      </children>
    </VBox>
    <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="10" styleClass="loading-wrapper"
      visible="false" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS">
      <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">
        <ProgressIndicator fx:id="loadingSpinner"/>
        <Text fx:id="loadingText" text="Loading..."/>
        <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
      </VBox>
    </VBox>
  </StackPane>
</VBox>

