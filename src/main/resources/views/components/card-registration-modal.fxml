<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="15"
  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.CardRegistrationModalController">
  <StackPane prefWidth="400.0">
    <VBox prefHeight="300.0" prefWidth="100.0" spacing="15.0">
      <children>
        <Text styleClass="content-title" text="Library Card Registration"/>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
          <Label text="Number of months to register"/>
          <Spinner fx:id="monthsSpinner" prefWidth="200.0" styleClass="input">
            <padding>
              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
          </Spinner>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
          <Label text="Total price"/>
          <HBox alignment="CENTER_LEFT" spacing="5">
            <Text fx:id="priceText" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            <Text text="VNÄ" style="-fx-font-size: 14px; -fx-fill: #7f8c8d;"/>
          </HBox>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
      </children>
    </VBox>
    <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="10" styleClass="loading-wrapper"
      visible="false" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS">
      <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">
        <ProgressIndicator fx:id="loadingSpinner"/>
        <Text fx:id="loadingText" text="Loading..."/>
        <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
      </VBox>
    </VBox>
  </StackPane>
</VBox>



