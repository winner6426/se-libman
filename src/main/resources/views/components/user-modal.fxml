<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<VBox alignment="CENTER" prefHeight="286.0" prefWidth="300.0" spacing="10"
  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.UserModalController">
  <StackPane prefWidth="300.0">
    <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
      <children>
        <HBox alignment="TOP_CENTER" fx:id="avatarContainer" visible="false">
          <StackPane fx:id="imageStackPane">
            <ImageView fx:id="profileImageView" cache="true" fitWidth="100.0" fitHeight="100.0"
              preserveRatio="true" styleClass="profile-image-upload" StackPane.alignment="CENTER">
              <clip>
                <Circle centerX="50.0" centerY="50.0" radius="50.0"/>
              </clip>
            </ImageView>
            <Label fx:id="changeAvatarLabel" mouseTransparent="true"
              styleClass="change-avatar-label" text="Change" visible="false"/>
          </StackPane>
        </HBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Email"/>
          <TextField fx:id="emailField" promptText="Email" style="-fx-prompt-text-fill: #aaaaaa;"
            styleClass="input"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Password"/>
          <TextField fx:id="passWordField" promptText="Password"
            style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Display Name"/>
          <TextField fx:id="displayNameField" promptText="Display Name"
            style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox fx:id="phoneNumberContainer" prefHeight="200.0" prefWidth="100.0">
          <Label text="Phone Number"/>
          <TextField fx:id="phoneNumberField" promptText="Phone Number"
            style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label text="Birthday"/>
          <DatePicker fx:id="birthdayField" promptText="Birthday"
            style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
          <padding>
            <Insets left="10.0" right="10.0"/>
          </padding>
        </VBox>
        <VBox prefHeight="48.0" prefWidth="151.0">
          <CheckBox fx:id="adminCheckBox" text="Admin">
            <padding>
              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
          </CheckBox>
          <VBox prefHeight="48.0" prefWidth="151.0">
            <Label text="Role"/>
            <ComboBox fx:id="roleComboBox" promptText="Role" styleClass="combo-box"/>
          </VBox>
          <CheckBox fx:id="emailVerifiedCheckBox" text="Email Verified">
            <padding>
              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
          </CheckBox>
          <CheckBox fx:id="disabledCheckBox" text="Disabled">
            <padding>
              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
          </CheckBox>
        </VBox>
      </children>
    </VBox>
    <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="10" styleClass="loading-wrapper"
      visible="false" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS">
      <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">
        <ProgressIndicator fx:id="loadingSpinner"/>
        <Text fx:id="loadingText" text="Loading..."/>
        <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
      </VBox>
    </VBox>
  </StackPane>
</VBox>
