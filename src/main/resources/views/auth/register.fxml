<?import javafx.scene.layout.StackPane?>
<StackPane fx:id="authWrapper" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
  minWidth="-Infinity" styleClass="anchor-pane" stylesheets="@../../styles/auth.css"
  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.RegisterController">
  <HBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <ImageView fitHeight="500" pickOnBounds="true" preserveRatio="true">
      <Image url="@../../images/auth.jpg"/>
    </ImageView>

    <VBox alignment="CENTER" prefHeight="500.0" prefWidth="464.0" spacing="10">
      <padding>
        <Insets right="20.0"/>
      </padding>
      <Text styleClass="title-text" text="Register"/>
      <GridPane fx:id="registerGrid" hgap="10" maxHeight="265.0" maxWidth="-Infinity"
        minHeight="-Infinity" prefHeight="206.0" prefWidth="408.0" vgap="10">
        <padding>
          <Insets bottom="-20.0" left="25.0" top="25.0"/>
        </padding>
        <VBox prefHeight="40.0" prefWidth="186.0">
          <children>
            <Label alignment="CENTER_RIGHT" text="Email:"/>
            <TextField onKeyPressed="#handleKeyPressed" fx:id="emailField" promptText="johndoe@example.com" styleClass="input"/>
          </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
          <children>
            <Label alignment="CENTER_RIGHT" text="Password:"/>
            <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="218.0"
              promptText="Enter password" styleClass="input"/>
          </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
          <children>
            <Label text="Confirm Password:"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"
              styleClass="input"/>
          </children>
        </VBox>
        <VBox minWidth="180.0" prefHeight="40.0" prefWidth="537.0" GridPane.columnIndex="1">
          <Label text="Fullname:"/>
          <TextField onKeyPressed="#handleKeyPressed" fx:id="fullNameField" prefHeight="20.0" prefWidth="57.0" promptText="John Doe"
            styleClass="input"/>
        </VBox>
        <VBox minWidth="180.0" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1"
          GridPane.rowIndex="1">
          <children>
            <Label text="Birthday:"/>
            <DatePicker fx:id="birthdayField"
               promptText="20/02/2002"/>
          </children>
        </VBox>
<!--        <VBox minWidth="180.0" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1"-->
<!--          GridPane.rowIndex="2">-->
<!--          <children>-->
<!--            <Label text="Phone:"/>-->
<!--            <TextField onKeyPressed="#handleKeyPressed" fx:id="phoneNumberField" promptText="+84123456789" styleClass="input"/>-->
<!--          </children>-->
<!--        </VBox>-->
        <columnConstraints>
          <ColumnConstraints maxWidth="218.0" minWidth="79.0" prefWidth="174.0"/>
          <ColumnConstraints maxWidth="211.0" minWidth="72.0" prefWidth="116.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints/>
          <RowConstraints/>
          <RowConstraints/>
          <RowConstraints/>
          <RowConstraints/>
          <RowConstraints/>
          <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0"/>
          <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0"/>
          <RowConstraints/>
          <RowConstraints/>
          <RowConstraints/>
          <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0"/>
          <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0"/>
          <RowConstraints/>
          <RowConstraints/>
        </rowConstraints>
      </GridPane>
      <Button onAction="#handleRegisterAction" styleClass="btn, btn-primary" text="Sign up">
        <VBox.margin>
          <Insets>
            <bottom>20</bottom>
          </Insets>
        </VBox.margin>
      </Button>
      <HBox alignment="CENTER" prefHeight="20.0" prefWidth="462.0" spacing="2">
        <Label text="Already have an account?"/>
        <Hyperlink onAction="#handleOpenLogin" text="Login"/>
      </HBox>
      <HBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1">
        <Separator minWidth="100" styleClass="or-separator"/>
        <Label styleClass="or-label" text="Or"/>
        <Separator minWidth="100" styleClass="or-separator"/>
      </HBox>
      <Button fx:id="googleLoginButton" onAction="#handleGoogleLogin"
        styleClass="full-width-button">
        <graphic>
          <HBox alignment="CENTER" spacing="10">
                        <Text text="ðŸ”µ" style="-fx-font-size:18px;" />
            <Label text="Continue with Google"/>
          </HBox>
        </graphic>
      </Button>
    </VBox>
  </HBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false" StackPane.alignment="CENTER">
    <Text text="Creating your account..." fx:id="loadingText" />
    <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100" />
    <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
  </VBox>
</StackPane>
