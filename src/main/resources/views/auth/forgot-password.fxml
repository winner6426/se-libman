<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.StackPane?>
<StackPane fx:id="authWrapper" styleClass="anchor-pane" stylesheets="@../../styles/auth.css"
  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.ForgotPasswordController">

  <VBox alignment="CENTER">
    <Text styleClass="title-text" text="Forgot Password">
      <VBox.margin>
        <Insets bottom="20.0"/>
      </VBox.margin>
    </Text>

    <GridPane alignment="TOP_LEFT" hgap="10" styleClass="form" vgap="10" VBox.vgrow="ALWAYS">

      <VBox alignment="TOP_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label text="Email:"/>
        <TextField styleClass="input" minWidth="200" fx:id="emailField"
          promptText="johndoe@example.com"/>
      </VBox>

      <columnConstraints>
        <ColumnConstraints minWidth="200"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
      </rowConstraints>

    </GridPane>

    <Label fx:id="message" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3"/>

    <Button fx:id="send" onAction="#handleSendEmail" text="Send" styleClass="btn, btn-primary">
      <VBox.margin>
        <Insets bottom="20.0"/>
      </VBox.margin>
    </Button>

    <Hyperlink text="Back to login" onAction="#handleOpenLogin"/>
    <Hyperlink text="Create an account" onAction="#handleOpenRegister"/>

    <padding>
      <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
    </padding>

  </VBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false"
    StackPane.alignment="CENTER">
    <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">

      <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100"/>
      <Text text="Sending email..." fx:id="loadingText"/>
      <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
    </VBox>
  </VBox>
</StackPane>
