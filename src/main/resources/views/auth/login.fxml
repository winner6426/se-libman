<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane fx:id="authWrapper" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
  minWidth="-Infinity" styleClass="anchor-pane" stylesheets="@../../styles/auth.css"
  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.LoginController">
  <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
    AnchorPane.topAnchor="0.0">
    <ImageView fitHeight="500" pickOnBounds="true" preserveRatio="true">
      <Image url="@../../images/auth.jpg"/>
    </ImageView>

    <VBox alignment="CENTER" spacing="10">
      <padding>
        <Insets left="40.0" right="40.0"/>
      </padding>
      <Text styleClass="title-text" text="Login"/>
      <VBox alignment="TOP_CENTER" spacing="10">
        <VBox>
          <Label alignment="CENTER_RIGHT" text="Email:"/>
          <TextField fx:id="emailField" onKeyPressed="#handleKeyPressed"
            promptText="jonh.doe@example.com" styleClass="input"/>
        </VBox>
        <VBox>
          <Label alignment="CENTER_RIGHT" text="Password:"/>
          <PasswordField fx:id="passwordField" onKeyPressed="#handleKeyPressed"
            promptText="Your password" styleClass="input"/>
        </VBox>
      </VBox>
      <Button onAction="#handleLoginAction" styleClass="btn, btn-primary" text="Login">
        <VBox.margin>
          <Insets>
            <bottom>10.0</bottom>
          </Insets>
        </VBox.margin>
      </Button>
      <VBox alignment="CENTER">
        <Hyperlink alignment="CENTER_RIGHT" onAction="#handleForgotPassword"
          text="Forgot Password?">
          <font>
            <Font size="10.0"/>
          </font>
          <VBox.margin>
            <Insets/>
          </VBox.margin>
        </Hyperlink>
        <HBox alignment="CENTER" spacing="2">
          <Label text="Don't have an account?"/>
          <Hyperlink onAction="#handleOpenRegister" text="Sign Up"/>
        </HBox>
      </VBox>
      <HBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1">
        <Separator minWidth="100" styleClass="or-separator"/>
        <Label styleClass="or-label" text="Or"/>
        <Separator minWidth="100" styleClass="or-separator"/>
      </HBox>
      <Button fx:id="googleLoginButton" onAction="#handleGoogleLogin"
        styleClass="full-width-button">
        <graphic>
          <HBox alignment="CENTER" spacing="10">
            <Text text="ðŸ”µ" style="-fx-font-size:18px;" />
            <Label text="Sign in with Google"/>
          </HBox>
        </graphic>
      </Button>

    </VBox>

  </HBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false"
    StackPane.alignment="CENTER">
    <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">
      <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100"/>
      <Text text="Logging in..." fx:id="loadingText"/>
      <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
    </VBox>
  </VBox>
</StackPane>
